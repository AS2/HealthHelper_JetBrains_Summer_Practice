<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write product info (100 gr)"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Product name"
            android:inputType="text" />

        <EditText
            android:id="@+id/productcalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/productname"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Calories"
            android:inputType="number" />

        <EditText
            android:id="@+id/productprotein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/productcalories"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Protein"
            android:inputType="number" />

        <EditText
            android:id="@+id/productfats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/productprotein"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Fats"
            android:inputType="number" />

        <EditText
            android:id="@+id/productcarbohydrates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/productfats"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Carbohydrates"
            android:inputType="number" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:background="#ff4747"
            android:id="@+id/addbutton"
            android:text="Add product to list" />
    </RelativeLayout>

</RelativeLayout>